<div class="container top-box">
    <div class="row">
        <%= render 'shared/header' %>
    </div>
    <%= render 'shared/flash' %>
    <div class="row top-group">
        <%= link_to new_creater_registration_path do %>
        <div class="col-xs-4 creater-top">
            <div class="creater-invite">
            </div>
            <p class="creater-font text-center">
                映像クリエイター
            </p>
            <div class="emp-text">
                <p class="top-text-emp text-center">Youtuberを探す</p>
                <p class="top-text-emp text-center">スキルを提供する</p>
                <p class="top-text-emp text-center">理想の条件で契約</p>
            </div>
        </div>
        <% end %>
        <div class="col-xs-4">
            <%= link_to about_path do %>
