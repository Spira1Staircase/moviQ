                <div class="col-xs-1"></div>
                <p class="btn btn-warning col-xs-10">How To Use</p>
            </div>
            <% end %>
        </div>
        <%= link_to new_employer_registration_path do %>
        <div class="col-xs-4 employer-top">
            <div class="cre-text">
                <p class="top-text-cre text-center">映像クリエイターを探す
                </p>
                <p class="top-text-cre text-center">
                    案件を提供する
                </p>
