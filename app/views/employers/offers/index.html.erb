<div class="container offer-index">
    <div class="row　header">
        <%= render 'shared/header' %>
    </div>
    <div class="row">
        <table class="table table-hover">
            <tr>
                <th>タイトル</th>
                <th>作成日</th>
                <th>ステータス</th>
                <th>　</th>
            </tr>
            <% @offers.each do |offer| %>
            <tr>
                <td>
                    <%= offer.title %>
                </td>
                <td>
                    <%= offer.created_at.strftime('%Y/%m/%d') %>
                </td>
                <td>
                    <%= offer.offer_status %>
                </td>
                <td>
                    <%= link_to employers_offer_path(offer) do %>
                    <i class="fas fa-arrow-circle-right request-icon"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </table>
    </div>
</div>