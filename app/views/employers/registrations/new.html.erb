<div class="container start_view">
    <div class="row　header">
        <%= render 'shared/header' %>
        <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class="row sign-form">
        <h3 class="text-center"><strong>Youtuberの方はこちら</strong></h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div>
            <div class="col-xs-3"></div>
            <table class="col-xs-6">
                <tr class="field">
                    <th class="col-xs-5 text-center">名前</th>
                    <td>
                        <%= f.text_field :employer_name, autocomplete: "", class: "name-form" %>
                    </td>
                </tr>
                <tr class="field">
                    <th class="col-xs-5 text-center">email</th>
                    <td>
                        <%= f.email_field :email, autocomplete: "メールアドレス", class: "mail-form" %>
                    </td>
                </tr>
                <tr class="field">
                    <th class="col-xs-5 text-center">パスワード<br>(6文字以上)</th>
                    <td>
                        <%= f.password_field :password, autocomplete: "パスワード", class: "pass-form" %>
                    </td>
                </tr>
                <tr class="field">
                    <th class="col-xs-5 text-center">パスワード<br>(確認用)</th>
                    <td>
                        <%= f.password_field :password_confirmation, autocomplete: "確認用パスワード", class: "pass-form" %>
                    </td>
                </tr>
            </table>
            <div class="submit-btn col-xs-12">
                <div class="col-xs-4"></div>
                <%= f.submit "登録する", class: "btn btn-info new-btn col-xs-4" %>
            </div>
            <% end %>
        </div>
    </div>
</div>