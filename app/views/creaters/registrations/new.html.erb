<div class="container start_view">
    <div class="row　header">
        <%= render 'shared/header' %>
        <%= render 'shared/flash' %>
        <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class="row sign-form">
        <h3 class="text-center"><strong>クリエイターの方はこちら</strong></h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row">
            <div class="col-xs-3"></div>
            <table class="col-xs-6">
                <tr class="field">
                    <th class="col-xs-5 text-center">氏名</th>
                    <td>
                        <%= f.text_field :name, :multipart => true, autocomplete: "氏名", class: "name-form col-xs-6", :multipart => true %>
                    </td>
                </tr>
                <tr class="field">
                    <th class="col-xs-5 text-center">カナ氏名</th>
                    <td>
                        <%= f.text_field :kana_name, autocomplete: "カナ氏名", class: "kana-form" %>
                    </td>
                </tr>
                <tr class="field">
                    <th class="col-xs-5 text-center">email</th>
                    <td>
                        <%= f.email_field :email, autocomplete: "メールアドレス", class: "mail-form" %>
                    </td>
                </tr>
                <tr class="field">
                    <th class="col-xs-5 text-center">キャリア</th>
                    <td>
                        <%= f.number_field :career, autocomplete: "キャリア", class: "career-form" %>年</td>
                </tr>
                <tr class="field">
                    <th class="col-xs-5 text-center">年齢</th>
                    <td>
                        <%= f.number_field :age, autocomplete: "年齢", class: "age-form" %>歳</td>
                </tr>
                <tr class="field">
                    <th class="col-xs-5 text-center">パスワード<br>(6文字以上)</th>
                    <td>
                        <%= f.password_field :password, autocomplete: "パスワード", class: "col-xs-7 pass-form" %>
                    </td>
                </tr>
                <tr class="field">
                    <th class="col-xs-5 text-center">パスワード<br>(確認用)</th>
                    <td>
                        <%= f.password_field :password_confirmation, autocomplete: "確認用パスワード", class: "pass-form" %>
                    </td>
                </tr>
            </table>
            <div class="submit-btn col-xs-12">
                <div class="col-xs-4"></div>
                <%= f.submit "登録する", class: "btn btn-info new-btn col-xs-4" %>
            </div>
            <% end %>
        </div>
    </div>
</div>