<div class="container start_view">

<!-- ヘッダー -->
  <div class="row　header">
    <%= render 'shared/header' %>
  </div>
<!-- ログインフォーム -->
  <div class="row sign-form">
      <h2><strong>クリエイターの方はこちら</strong></h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field col-xs-12">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "メールアドレス", class: "mail-form" %>
      </div>

      <div class="field col-xs-12">
        <%= f.label :"パスワード(6文字以上)" %>
        <%= f.password_field :password, autocomplete: "パスワード", class: "pass-form" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
      </div>
      <% end %>
      <div class="submit-btn col-xs-12">
        <%= f.submit "ログイン", class: "btn btn-info col-xs-8" %>
      </div>
      <% end %>
  </div>
</div>